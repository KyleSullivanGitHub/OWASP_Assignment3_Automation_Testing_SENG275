<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="OWASP_Full_Site_Test" verbose="1" >
    <test name="Smoke_Test">
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <packages>
            <package name="FunctionalTests"></package>
        </packages>
    </test>
    <test name="Sanity_Test" >
        <groups>
            <run>
                <exclude name="Extended_Period_Test"/>
                <include name="Sanity"/>
            </run>
        </groups>
    </test>
    <test name="Regression_Test" >
        <groups>
            <run>
                <include name="Regression"/>
            </run>
        </groups>
    </test>
</suite>